generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model checklist_items {
  id        String   @id
  text      String
  completed Boolean  @default(false)
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime
  taskId    String
  tasks     tasks    @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model projects {
  id          String   @id
  name        String
  description String?
  color       String   @default("#3B82F6")
  archived    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  ownerId     String
  users       users    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  tasks       tasks[]
}

model tasks {
  id                              String            @id
  title                           String
  description                     String?
  status                          TaskStatus        @default(TODO)
  priority                        TaskPriority      @default(NORMAL)
  position                        Int               @default(0)
  dueDate                         DateTime?
  createdAt                       DateTime          @default(now())
  updatedAt                       DateTime
  projectId                       String
  createdById                     String
  assignedToId                    String?
  checklist_items                 checklist_items[]
  users_tasks_assignedToIdTousers users?            @relation("tasks_assignedToIdTousers", fields: [assignedToId], references: [id])
  users_tasks_createdByIdTousers  users             @relation("tasks_createdByIdTousers", fields: [createdById], references: [id], onDelete: Cascade)
  projects                        projects          @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model users {
  id                              String     @id
  name                            String
  email                           String     @unique
  password                        String
  avatarColor                     String     @default("#3B82F6")
  active                          Boolean    @default(true)
  createdAt                       DateTime   @default(now())
  updatedAt                       DateTime
  projects                        projects[]
  tasks_tasks_assignedToIdTousers tasks[]    @relation("tasks_assignedToIdTousers")
  tasks_tasks_createdByIdTousers  tasks[]    @relation("tasks_createdByIdTousers")
}

enum TaskPriority {
  NONE
  LOW
  NORMAL
  HIGH
  URGENT
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}
